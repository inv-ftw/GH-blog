<h1>Registration</h1>
<%= form_for(@user) do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <br/>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email %>
    <br/>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <br/>
    <%= f.label :password_confirmation, "Password confirmation" %>
    <%= f.password_field :password_confirmation %>
     <br/>
    <%= f.submit "Register" %>
<% end %>